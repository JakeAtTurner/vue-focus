{
  "root": true,
  "extends": [
    "plugin:vue/vue3-essential",
    "eslint:recommended"
  ],
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "linebreak-style": [2, "unix"],
    "comma-dangle": [2, "always-multiline"],
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": [1, { "vars": "all", "args": "after-used" }]
  },
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "env": {
    "node": true,
    "browser": true
  },
  "ecmaFeatures": {
    "modules": true
  }
}